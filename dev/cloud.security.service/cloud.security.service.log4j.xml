<?xml version="1.0" encoding="UTF-8" ?>

<log4j:configuration>
	<appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd hh:mm:ss}:%p %t %c - %m%n" />
		</layout>
	</appender>

	<appender name="DailyRollingFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="Append" value="true" />
		<param name="MaxBackupIndex" value="2" />	
		<param name="File" value="c:/temp/cloud.security.service.log" />
		<param name="MaxBackupIndex" value="3" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd hh:mm:ss}:%p %t %c - %m%n" />
		</layout>
	</appender>

	<appender name="ELKAppender"
		class="org.apache.log4j.net.SocketAppender">
		<param name="remoteHost" value="10.39.101.226" /><!-- 这是远程log server -->
		<param name="port" value="3456" /><!-- 这是远程log server port -->
		<param name="Threshold" value="INFO" /><!-- log 级别 -->
		<param name="ReconnectionDelay" value="1000" />
		<param name="LocationInfo" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c -%-4r [%t] %-5p %x - %m%n" />
		</layout>
	</appender>

	<logger name="cloud.security.service">
		<level value="DEBUG" />
		<appender-ref ref="DailyRollingFileAppender" />
		<appender-ref ref="ELKAppender" />
	</logger>


	<root>
		<priority value="debug" />
		<appender-ref ref="ConsoleAppender" />
	</root>

</log4j:configuration>



